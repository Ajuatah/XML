<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="xml-schemas/page.xsd">
  <info>
    <h2>Contact Our Library</h2>
    <p>If you want to request a book, share feedback, or reach out to publishers or the manager, use the info below.</p>
  </info>

  <contacts>
    <contact>
      <label>Library Manager</label>
      <value>Email: manager@library.com | Phone: +237 678 123 456</value>
    </contact>
    <contact>
      <label>Book Publisher</label>
      <value>Email: publisher@books.com | Phone: +237 690 987 654</value>
    </contact>
  </contacts>

  <social>
    <a href="https://twitter.com/library" target="_blank">🐦 Twitter</a>
    <a href="https://discord.gg/library" target="_blank">💬 Discord</a>
    <a href="https://github.com/library" target="_blank">💻 GitHub</a>
    <a href="mailto:contact@library.com">✉️ Email</a>
  </social>

  <form>
    <h3>Send Us a Message</h3>
    <input type="text" id="userName" placeholder="Your Name" required="required"/>
    <input type="email" id="userEmail" placeholder="Your Email" required="required" />
    <textarea id="userMessage" placeholder="Your Message" required="required"></textarea>
    <button type="submit">Send Message</button>
  </form> 
</page>
