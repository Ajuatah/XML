<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="xml-schemas/page.xsd">
      <description>
    Welcome to our Interactive Library! Register or log in to explore books, filter by genre, and search your favorites.
  </description>

  <forms>
    <form id="loginForm">
      <h2>Login</h2>
      <input type="email" id="loginEmail" placeholder="Email" required="required" />
      <input type="password" id="loginPassword" placeholder="Password" required="required" />
      <button type="submit">Login</button>
      <p>Don't have an account? <a href="#" onclick="switchToRegister()">Register</a></p>
    </form>

    <form id="registerForm" style="display:none;">
      <h2>Register</h2>
      <input type="text" id="registerUsername" placeholder="Username" required="required"/>
      <input type="email" id="registerEmail" placeholder="Email" required="required" />
      <input type="password" id="registerPassword" placeholder="Password" required="required" />
      <button type="submit">Register</button>
      <p>Already have an account? <a href="#" onclick="switchToLogin()">Login</a></p>
    </form>
  </forms>
</page>
